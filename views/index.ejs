<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>To Do List</title>
</head>
<body>
    
    <header>

        <% if (task == null) { %>
        <form action="/create" method="post">
            <input type="text" name="task" id="task" placeholder="Enter a Task">
            <button type="submit" id="addButton">Add</button>
        </form>
        <% } else { %>
        <form action="/updateOne/<%= task._id %>" method="post">
            <input type="text" name="task" id="task" value="<%= task.task %>">
            <button type="submit" id="addButton">Update</button>
        </form>
        <% } %>
    </header>


    <section id="tasks">
        <ul>
            <% tasksList.forEach((task) => {%>
                <li>
                    <%=task.task%> | <%=task.date.toLocaleDateString('pt-BR')%>
                    <a href="/getById/<%= task._id %>/update">Edit</a>
                    <a href="/getById/<%= task._id %>/delete">Delete</a>
                </li>
            <%})%>
        </ul>
    </section>


    <% if (taskDelete != null) { %>
    <section id="modal">
        <div id="card">

            <a href="/">x</a>
            <h2>Confirm</h2> 
            <hr>
            <p>Really want to delete this task: <%= taskDelete.task %></p>
            <a href="/">No</a>
            <a href="/deleteOne/<%= taskDelete._id %>">Yes</a>

        </div>
    </section>
    <% } %>

    <script src="script.js"></script>
</body>
</html>